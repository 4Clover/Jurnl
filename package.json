{
    "name": "jurnl-app",
    "private": true,
    "version": "0.0.1",
    "type": "module",
    "scripts": {
        "dev": "vite dev --port 3000",
        "dev:fast": "vite dev --port 3000 --force",
        "build": "vite build",
        "build:fast": "vite build --mode development",
        "preview": "vite preview --host 127.0.0.1",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --threshold warning",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch --threshold warning",
        "prepare": "husky",
        "lint": "eslint .",
        "format": "prettier --write .",
        "type-check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "test:client": "vitest --workspace client",
        "test:server": "vitest --workspace server",
        "test": "vitest",
        "seed-dev": "tsx src/lib/server/seed-dev-data.ts",
        "seed-dev:clear": "tsx src/lib/server/seed-dev-data.ts clear",
        "generate-emoji-ref": "node scripts/generate-emoji-reference.js",
        "update-docs": "npm run generate-emoji-ref"
    },
    "devDependencies": {
        "@eslint/compat": "^1.2.5",
        "@eslint/js": "^9.18.0",
        "@oslojs/crypto": "^1.0.1",
        "@oslojs/encoding": "^1.1.0",
        "@sveltejs/adapter-auto": "^6.0.0",
        "@sveltejs/kit": "^2.16.0",
        "@sveltejs/vite-plugin-svelte": "^5.0.0",
        "@testing-library/jest-dom": "^6.6.3",
        "@testing-library/svelte": "^5.2.4",
        "@types/node": "^22.15.30",
        "@typescript-eslint/parser": "^8.33.0",
        "argon2": "^0.43.0",
        "axios": "^1.9.0",
        "eslint": "^9.18.0",
        "eslint-config-prettier": "^10.0.1",
        "eslint-plugin-svelte": "^3.0.0",
        "globals": "^16.0.0",
        "google-auth-library": "^9.15.1",
        "husky": "^9.1.7",
        "jsdom": "^26.0.0",
        "lint-staged": "^16.0.0",
        "lucia": "^3.2.2",
        "mongodb": "^6.16.0",
        "mongodb-memory-server": "^10.1.4",
        "mongoose": "^8.15.0",
        "prettier": "^3.4.2",
        "prettier-plugin-svelte": "3.3.3",
        "sass-embedded": "^1.89.0",
        "svelte": "^5.0.0",
        "svelte-check": "^4.0.0",
        "svelte-eslint-parser": "^1.2.0",
        "svelte-preprocess": "^6.0.3",
        "tsx": "^4.19.4",
        "typescript": "^5.0.0",
        "typescript-eslint": "^8.20.0",
        "vite": "6.3.5",
        "vitest": "^3.0.0",
        "zod": "^3.25.28",
        "zod-validation-error": "^3.4.1"
    },
    "engines": {
        "node": "v22.16.0"
    },
    "lint-staged": {
        "*.{js,ts,svelte}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{js,ts,svelte,json,md,html,css,yml}": "prettier --write"
    },
    "dependencies": {
        "axios": "^1.9.0"
    }
}
