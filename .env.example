# Copy this file to .env and configure as needed

# MongoDB Configuration
# Leave MONGODB_URI commented out to use the in-memory MongoDB for development (recommended)
# Uncomment and set to use an external MongoDB instance
# MONGODB_URI=mongodb://root:example@localhost:27017/jurnl?authSource=admin

# Google OAuth2 Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Base URL for OAuth callbacks
BASE_URL=http://localhost:3000

# Other configuration
COMPOSE_BAKE=true
